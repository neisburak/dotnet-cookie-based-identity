@model TwoFactorLoginVieWModel

@{
    ViewData["Title"] = "2FA Sign In";
}

<div class="row">
    <div class="col-md-4 offset-md-4">
        <div class="card">
            <h5 class="card-header">Sign in</h5>
            <div class="card-body">
                <form asp-action="TwoFactorLogin">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <input asp-for="TwoFactorType" type="hidden" />

                    <div class="form-group">
                        <label asp-for="VerificationCode"></label>
                        <input asp-for="VerificationCode" class="form-control" />
                        <span asp-validation-for="VerificationCode" class="text-danger"></span>
                    </div>

                    @if (Model?.TwoFactorType == TwoFactorType.Authenticator)
                    {
                        <div class="form-group">
                            <input asp-for="IsRecoveryCode" type="checkbox" />
                            <label asp-for="IsRecoveryCode" class="control-label">Is recovery code?</label>
                        </div>
                    }

                    <div class="mt-3">
                        <button type="submit" class="btn btn-primary">Sign in</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>